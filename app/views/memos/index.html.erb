<div class="memo-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="memo-index-title">
          メモホーム
        </h1>
      </div>
    </div>

    <% current_user.memos.each do |memo| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="memo-index-single">
            <p1 class="memo-text">
              <%= link_to simple_format(memo.main),memo %>
            </p1>
            <% if !memo.favorite_users.include?(current_user) %>
              <%= link_to favorites_path(memo_id: memo.id), method: :post do %>
                <%= image_tag 'icons/star-black.png', class: 'memo-index-icon' %>
              <% end %>
            <% else %>
              <%= link_to favorites_path(memo_id: memo.id), method: :delete do %>
                <%= image_tag 'icons/star-yellow.png', class: 'memo-index-icon' %>
              <% end %>
            <% end %>
            <div class="memo-index-destroy">
              <%= link_to "削除", "/memos/#{memo.id}/destroy", method: :delete %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
