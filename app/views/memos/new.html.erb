<div class="memo-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add memo</h1>
        <%= form_for @memo do |f| %>
        <div class="form-group">
          <%= f.label :main %>
          <%= f.text_area :main, class: 'form-control' %>
        </div>

          <%= f.submit "投稿する", class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
